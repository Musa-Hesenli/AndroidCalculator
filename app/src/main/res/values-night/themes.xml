<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark" tools:targetApi="23">@color/button_background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>
    <style name="MyNoActionBarShadowTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme">
        <item name="android:background">@color/app_background_dark</item>
    </style>
    <style name="AppCurrentThemeIcon">
        <item name="android:src">@drawable/ic_baseline_wb_sunny_24</item>
    </style>
    <style name="MenuThemeIcon">
        <item name="android:src">@drawable/ic_menu_night_mode</item>
    </style>
    <style name="calcButton">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:backgroundTint">@color/button_background_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>
    <style name="edgeButtons" parent="calcButton">
        <item name="android:backgroundTint">#1E1D1D</item>
        <item name="android:textColor">#61B329</item>
    </style>
    <style name="resultButton" parent="edgeButtons">
        <item name="android:backgroundTint">#61B329</item>
        <item name="android:src">@drawable/ic_equal__1_</item>
    </style>
    <style name="processesText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">#C2C2C2</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:backgroundTint">#fff</item>
    </style>
    <style name="bar_buttons">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>